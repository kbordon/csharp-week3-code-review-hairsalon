@{
  Layout = "_Layout";
}

<div class="well well-body">
  @* <form action="/stylists/clear" method="post">
    <button class="btn btn-danger pull-right" type="submit">Clear All Stylists</button>
  </form> *@
  <h1>Stylists</h1>
  @if (Model.Count == 0)
  {
      <h4><em>There are no stylists entered yet.</em></h4>
  }
  else
  {
      @foreach(var cuisine in Model)
      {
        <span class="custom-list"><a href="/stylists/@cuisine.Id">@cuisine.Name</a></span>
      }
  }
  <ul class="list-inline">
    <li><a class="other-link" href="/stylists/new">Add a Stylist</a></li>
    <li><a class="other-link" href="/">Return to Home</a></li>
  </ul>
</div>
